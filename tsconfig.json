  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
